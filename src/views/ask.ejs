<%- include partials/header.ejs %>
<body>
  <%- include partials/navbar.ejs %>
  <div class="container">
    <div class="card">
      <div class="card-header">
        <h3>Faça uma Pergunta</h3>
      </div>
      <div class="card-body">
        <form method="POST" action="/savequestion">
          <label>Título</label>
          <input
            type="text"
            placeholder="Título"
            name="title"
            class="form-control"
          />
          <br />
          <label>Descrição</label>
          <textarea
            placeholder="Descreva sua pergunta aqui"
            name="description"
            class="form-control"
          ></textarea>
          <br />
          <button type="submit" class="btn btn-dark">Enviar</button>
        </form>
      </div>
    </div>
  </div>
</body>
